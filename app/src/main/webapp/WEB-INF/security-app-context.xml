<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.0.xsd">

  <http auto-config="true" use-expressions="true"><!-- access-denied-page - insufficient priveleges-->
    <intercept-url pattern="/pages/login/**" filters="none" />
    <intercept-url pattern="/pages/admin/**" access="hasAnyRole('ADMIN')"  />
    <intercept-url pattern="/pages/**" access="hasAnyRole('USER_ROLE', 'ADMIN')"  />
    <form-login login-page="/pages/login/login.jsp"
                authentication-failure-url="/pages/login/login.jsp" default-target-url="/pages/1productType.jsf"/>
    <logout logout-success-url="/pages/login/login.jsp"/>
  </http>

  <!--<global-method-security></global-method-security>-->
  <!--@RolesAllowed({"ADMIN"}) na metodzie-->

  <beans:bean id="daoAuthenticationProvider"
              class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
    <beans:property name="userDetailsService" ref="userDetailsService"/>
  </beans:bean>

  <beans:bean id="authenticationManager"
              class="org.springframework.security.authentication.ProviderManager">
    <beans:property name="providers">
      <beans:list>
        <beans:ref local="daoAuthenticationProvider"/>
      </beans:list>
    </beans:property>
  </beans:bean>

  <authentication-manager>
    <authentication-provider user-service-ref="userDetailsService">
      <!--<password-encoder hash="sha-256"/>-->
    </authentication-provider>
  </authentication-manager>

