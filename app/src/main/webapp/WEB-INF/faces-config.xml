<?xml version='1.0' encoding='UTF-8'?>

<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

  <application>
    <el-resolver>
      org.springframework.web.jsf.el.SpringBeanFacesELResolver
    </el-resolver>
    <resource-bundle>
      <base-name>message.messages</base-name>
      <var>msgs</var>
    </resource-bundle>
  </application>
  <lifecycle>
    <phase-listener>app.security.LoginErrorPhaseListener</phase-listener>
  </lifecycle>

  <!-- Global navigation rules -->
  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>productType</from-outcome>
      <to-view-id>/page/app/1productType.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>totalAmount</from-outcome>
      <to-view-id>/page/app/2totalAmount.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>indemnity</from-outcome>
      <to-view-id>/page/app/3indemnity.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>parameters</from-outcome>
      <to-view-id>/page/app/4parameters.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>declarations</from-outcome>
      <to-view-id>/page/app/5declarations.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>interest</from-outcome>
      <to-view-id>/page/app/6insterest.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>credit</from-outcome>
      <to-view-id>/page/app/7credit.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>creditPeriod</from-outcome>
      <to-view-id>/page/app/8creditPeriod.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>priceCondition</from-outcome>
      <to-view-id>/page/app/9priceCondition.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>additionalParameter</from-outcome>
      <to-view-id>/page/app/10additionalParameter.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>documents</from-outcome>
      <to-view-id>/page/app/11documents.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
